        <activity
            android:name="com.agilesumo.runjogwalk.EditRunActivity"
            android:label="@string/title_activity_edit_run" >
        </activity>
            
            
        <activity
            android:name="com.agilesumo.runjogwalk.EditJogActivity"
            android:label="@string/title_activity_edit_jog" >
        </activity>
            
        <activity
            android:name="com.agilesumo.runjogwalk.EditWalkActivity"
            android:label="@string/title_activity_edit_walk" >          
        </activity>
        
          <activity
            android:name="com.agilesumo.runjogwalk.WorkoutTimerActivity"
            android:label="@string/title_activity_workout_timer"
            android:launchMode="singleTop" >
        </activity>
        
                 
          <activity
            android:name="com.agilesumo.runjogwalk.SettingsActivity"
            android:label="@string/action_settings">
          
        </activity>
        
        <activity
            android:name="com.agilesumo.runjogwalk.SettingsAPI11PlusActivity"
            android:label="@string/action_settings">
        </activity>
        
