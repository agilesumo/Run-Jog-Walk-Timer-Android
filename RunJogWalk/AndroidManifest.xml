        <activity
            android:name="com.agilesumo.runjogwalk.AddJogActivity"
            android:label="@string/title_activity_add_jog" >
        </activity>
        
         <activity
            android:name="com.agilesumo.runjogwalk.AddWalkActivity"
            android:label="@string/title_activity_add_walk" >
